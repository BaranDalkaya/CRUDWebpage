@model Rocky.Models.ApplicationType

<h1>Create Application Type</h1>

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Application Type</h2>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button class="btn btn-info w-100">Create</button>
            </div>
            <div class="col-3 ">
                <a asp-action="Index" class="btn btn-primary w-100">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"/>}
}
